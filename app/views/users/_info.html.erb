<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
   <th>フォロー数</th>
   <th><%= link_to user.followings.count, user_followers_path(user.id), method: :get %></th>
  </tr>
  <tr>
   <th>フォロワー数</th>
   <th><%= link_to user.followers.count,user_followings_path(user.id), method: :get %></th>
  </tr>
</table>

<div class='row'>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user.id), class:"btn btn-info btn-sm btn-block mb-3", method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), class:"btn btn-success btn-sm btn-block mb-3", method: :post %>
  <% end %>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>